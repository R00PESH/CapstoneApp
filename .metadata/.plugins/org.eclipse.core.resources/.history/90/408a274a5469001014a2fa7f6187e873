package training.iqgateway.service;

import java.util.List;

import training.iqgateway.model.DoctorEO;

public interface DoctorService {
	
	  DoctorEO createDoctor(DoctorEO doctor);
	    DoctorEO getDoctorById(String id);
	    List<DoctorEO> getAllDoctors();
	    DoctorEO updateDoctor(String id, DoctorEO doctor);
	    void deleteDoctor(String id);

	    List<DoctorEO> filterDoctors(
	        String docId, Integer hosId, String specialization,
	        String availabilityStatus, String licenseNumber,
	        String qualification, String name
	    );
	    DoctorEO addReview(String doctorId, DoctorEO.Review review);

}
