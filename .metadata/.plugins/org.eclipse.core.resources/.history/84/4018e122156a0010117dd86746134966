package training.iqgateway.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import training.iqgateway.dto.ProviderDTO;
import training.iqgateway.service.impl.ProviderClientService;

@RestController
@RequestMapping("/customer-view")
public class CustomerProviderController {
	
	@Autowired
	private ProviderClientService provideClientSer;
	
	@GetMapping("/providers")
    public List<ProviderDTO> getProvidersForCustomer(
            @RequestParam(required = false) String speciality,
            @RequestParam(required = false) Double rating,
            @RequestParam(required = false,name="Hospital_Name") String hospitalName,
            @RequestParam(required = false) String location,
            @RequestParam(required = false) Long zipcode,
            @RequestParam(required = false) Double lat,
            @RequestParam(required = false) Double lon,
            @RequestParam(required = false) Double distanceKm,
            @RequestParam(required = false) String insurancePlan
    ) {
        return provideClientSer.fetchProvidersWithFilters(
               speciality,rating, hospitalName,location,
                zipcode, lat, lon, distanceKm, insurancePlan
        );
    }

    // View provider profile
    @GetMapping("/providers/{providerId}")
    public ProviderDTO getProviderProfile(@PathVariable String providerId) {
        return provideClientSer.getProviderById(providerId);
    }
}


