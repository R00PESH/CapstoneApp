package training.iqgateway.service.impl;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;

import training.iqgateway.dto.DoctorDTO;
import training.iqgateway.dto.ProviderDTO;

@Service
public class DoctorServiceUrl {

    @Value("${doctor.service.url}")
    private String doctorServiceUrl;

    @Autowired
    private RestTemplate restTemplate;

    public DoctorDTO fetchDoctorByDocId(String docId) {
        String url = doctorServiceUrl + "/" + docId;
        return restTemplate.getForObject(url, DoctorDTO.class);
    }
}
